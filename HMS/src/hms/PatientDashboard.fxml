<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hms.PatientDashboardController">
    <children>
        <Label alignment="CENTER" layoutX="135.0" layoutY="21.0" prefHeight="35.0" prefWidth="229.0" styleClass="form-title" text="Patient Dashboard" />
        
        <Label layoutX="40.0" layoutY="109.0" text="Select Doctor:" />
        <ComboBox id="patient" fx:id="doctorComboBox" layoutX="160.0" layoutY="100.0" prefWidth="200.0" promptText="Select Doctor" styleClass="patient" />

        <Label layoutX="40.0" layoutY="163.0" text="Select Date:" />
        <DatePicker fx:id="datePicker" layoutX="160.0" layoutY="152.0" prefHeight="37.0" prefWidth="300.0" promptText="select date" styleClass="patient" />

        <Label layoutX="40.0" layoutY="209.0" text="Select Time:" />
        <TextField fx:id="timeField" layoutX="160.0" layoutY="205.0" prefHeight="46.0" prefWidth="200.0" promptText="hh:mm" styleClass="time" />

        <Button fx:id="appointBtn" layoutX="95.0" layoutY="261.0" onAction="#BookAppointment" prefHeight="20.0" prefWidth="140.0" text="Book Appointment" />
        <Button fx:id="viewAppointBtn" layoutX="266.0" layoutY="261.0" onAction="#ViewAppointments" prefHeight="31.0" prefWidth="185.0" text="View My Appointments" />
        <Button fx:id="logoutBtn" layoutX="213.0" layoutY="318.0" onAction="#Logout" styleClass="logout" text="Logout" />
      <ComboBox fx:id="ampmComboBox" layoutX="310.0" layoutY="205.0" prefWidth="150.0" styleClass="time" />
    </children>
</AnchorPane>

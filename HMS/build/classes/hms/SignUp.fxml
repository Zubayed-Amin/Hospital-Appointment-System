<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@Style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hms.SignUpController">
    <children>

        <VBox alignment="CENTER" layoutX="50.0" prefWidth="340.0" spacing="10.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="0.0">
            <children>
            <Label styleClass="form-title" text="SignUp Form" />

                <Label fx:id="lblMsg" alignment="CENTER" prefHeight="29.0" prefWidth="302.0" styleClass="error" />

                <TextField fx:id="tfFullname" maxWidth="300" promptText="Full Name" styleClass="signup" />
                <TextField fx:id="tfUsername" maxWidth="300" promptText="Username" styleClass="signup" />
            <TextField fx:id="tfContact" maxWidth="300" promptText="Contact" styleClass="signup" />
                <PasswordField fx:id="pfPassword" maxWidth="300" promptText="Password" styleClass="signup" />
                <PasswordField fx:id="pfConfirmPassword" maxWidth="300" promptText="Confirm Password" styleClass="signup" />
            <ComboBox fx:id="choiceRole" prefWidth="300.0" promptText="Select Role" styleClass="signup" />

                <Button fx:id="btnSignUp" onAction="#handleSignUp" prefWidth="300" text="Sign Up" />

            </children>
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </VBox>

    </children>
</AnchorPane>
